@using MvcKutuphane.Models.Entity
@model List<TBL_PERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<table class="table table-bordered">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>Personel Ad Soyad</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model) { 
    <tr>
        <td>@x.ID</td>
        <td>@x.PersonelAdSoyad</td>
        <td><a class="btn btn-danger" href="/Personel/PersonelSil/@x.ID">Sil</a></td>
        <td><a class="btn btn-success" href="/Personel/PersonelGetir/@x.ID">Güncelle</a></td>
    </tr>
    }
</table>
<a  href="/Personel/PersonelEkle/" class="btn btn-primary">Personel Ekle</a>

