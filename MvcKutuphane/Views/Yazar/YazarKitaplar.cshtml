@using MvcKutuphane.Models.Entity
@model List<TBL_KİTAP>

@{
    ViewBag.Title = "YazarKitaplar";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h4>Kitap Yazarı: @ViewBag.adsoyad</h4>


<table class="table table-striped">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kategori</th>
        <th>Yayın Evi</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.KitapAd</td>
            <td>@x.TBL_KATEGORİ.Ad</td>
            <td>@x.KitapYayınEvi</td>
        </tr>
    }
</table>

