@using MvcKutuphane.Models.Entity
@model List<TBL_HAREKET>

@{
    ViewBag.Title = "Kitap";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Kitap</h2>

<table class="table table-bordered">

    <tr>

        <th>Kitap Ad</th>
        <th>Kitap Alış Tarih</th>
        <th>Kitap İade Tarih</th>

    </tr>
    @foreach (var x in Model)
    {

        <tr>
            <td>@x.TBL_KİTAP.KitapAd</td>
            <td>@Convert.ToDateTime(x.KitapAlisTarih).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(x.UyeGetirdigiTarih).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>