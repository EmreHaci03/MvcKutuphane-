@using MvcKutuphane.Models.Entity
@model List<TBL_HAREKET>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}



   

<table class="table table-bordered">

    <tr>
        <th>Hareket ID</th>
        <th>Uye Ad Soyad</th>
        <th>Kitap Ad</th>
        <th>Personel Ad Soyad</th>
        <th>Kitap Alış Tarih</th>
        <th>Üye Getirdiği Tarih</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {

        <tr>
            <td>@x.HAREKETID</td>
            <td>@(x.TBL_UYELER != null ? x.TBL_UYELER.UyeAdSoyad : "-")</td>
            <td>@(x.TBL_KİTAP != null ? x.TBL_KİTAP.KitapAd : "-")</td>
            <td>@(x.TBL_PERSONEL != null ? x.TBL_PERSONEL.PersonelAdSoyad : "-")</td>
            <td>@Convert.ToDateTime(x.KitapAlisTarih).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(x.UyeGetirdigiTarih).ToString("dd/MM/yyyy")</td>
            <td><a class="btn btn-success">Detaylar</a></td>
        </tr>
    }
</table>

