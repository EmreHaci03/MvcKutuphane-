@model MvcKutuphane.Models.Entity.TBL_KİTAP
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div class="form-group">
        <div style="margin-top:15px">
            <label>Kitap ID</label>
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px">
            <label>Kitap Adı</label>
            @Html.TextBoxFor(k => k.KitapAd, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px">
            <label>Kategori</label>
            @Html.DropDownListFor(k => k.TBL_KATEGORİ.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px">
            <label>Kitap Yazarı</label>
            @Html.DropDownListFor(k => k.TBL_YAZAR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px">
            <label>Basım Yılı</label>
            @Html.TextBoxFor(k => k.KitapBasimYili, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px">
            <label>Yayın Evi</label>
            @Html.TextBoxFor(k => k.KitapYayınEvi, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px">
            <label>Sayfa Sayısı</label>
            @Html.TextBoxFor(k => k.KitapSayfaSayısı, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px"></div>
            <button class="btn btn-success">Güncelle</button>
        </div>
        }
