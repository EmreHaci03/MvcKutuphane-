@model MvcKutuphane.Models.Entity.TBL_HAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}




<form class="form-group" method="post">

    <div style="margin-top:15px">
        <label>Üye ID</label>
        @Html.TextBoxFor(k => k.UYE, new { @class = "form-control" })
        @Html.ValidationMessageFor(k => k.UYE, "",new {@class="text-danger"})
    <div style="margin-top:15px">
        <label>Kitap ID</label>
        @Html.TextBoxFor(k => k.KITAP, new { @class = "form-control" })
        @Html.ValidationMessageFor(k => k.KITAP, "", new { @class = "text-danger" })
    </div>
    <div style="margin-top:15px">
        <label>Personel ID</label>
        @Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control" })
        @Html.ValidationMessageFor(k => k.PERSONEL, "", new { @class = "text-danger" })
    </div>
        <div style="margin-top:15px">
            <label>Kitap Alış Tarih</label>
            <input type="text" class="form-control" name="KitapAlisTarih" value="@DateTime.Now.ToShortDateString()" />
        </div>
        <div style="margin-top:15px">
            <label>Kitap İade Tarih</label>
            <input type="text" class="form-control" name="KitapİadeTarih" value="@DateTime.Now.AddDays(7).ToShortDateString()"/>
        </div>
        <div style="margin-top:15px"></div>
        <button class="btn btn-info">Kitabı Ödünç Ver</button>
        <input  type="hidden" name="IslemDurum" value="False"/>
</form>

