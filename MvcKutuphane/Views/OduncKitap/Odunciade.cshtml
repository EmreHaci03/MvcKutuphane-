@model MvcKutuphane.Models.Entity.TBL_HAREKET
@{
    ViewBag.Title = "Odunciade";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap İade Sayfası</h2>

@using (Html.BeginForm("OduncKitapGuncelle", "OduncKitap", FormMethod.Post))
{
    <div style="margin-top:15px"></div>
    <div class="form-group">
        <label>Hareket ID</label>
        @Html.TextBoxFor(p => p.HAREKETID, new { @class = "form-control" })
        <div style="margin-top:15px"></div>
        <label>Kitap Adı</label>
        @Html.TextBoxFor(p => p.TBL_KİTAP.KitapAd, new { @class = "form-control" })
        <div style="margin-top:15px"></div>
        <label>Üye Adı</label>
        @Html.TextBoxFor(p => p.TBL_UYELER.UyeAdSoyad, new { @class = "form-control" })
        <div style="margin-top:15px"></div>
        <label>Personel Adı</label>
        @Html.TextBoxFor(p => p.TBL_PERSONEL.PersonelAdSoyad, new { @class = "form-control" })
        <div style="margin-top:15px"></div>
        <label>Kitap Alış Tarih</label>
        @Html.TextBoxFor(p => p.KitapAlisTarih, new { @class = "form-control" })
        <div style="margin-top:15px"></div>
        <label>İade Edilmesi Gereken Tarih</label>
        @Html.TextBoxFor(p => p.KitapİadeTarih, new { @class = "form-control" })
        <div style="margin-top:15px"></div>
        <label>İade Edilen Tarih</label>
        <input type="text" class="form-control" name="UyeGetirdigiTarih" value="@DateTime.Now.ToShortDateString()" />
        <br />
        <label>Geç Gelen Gün Sayısı</label>
        <input type="text" class="form-control" id="GecTarih" value="@ViewBag.ceza" />
    </div>
    <div>
        <button class="btn btn-warning" href="/OduncKitap/Index/">Ödünç Kitabı Geri Al</button>
    </div>

}

